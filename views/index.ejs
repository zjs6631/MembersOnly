<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="log-in"><button>Log in</button></a>
    <a href="sign-up"><button>Sign up</button></a>
    <% if(user) { %>
      <h1>Hello there, <%= user.firstname %> <%= user.lastname %></h1>
      <a href='/log-out'><button>Log Out</button></a>
      <% if(user.isMember){ %>
          <h1>Thanks for being a member</h1>
          <a href='/message'><button>+ Message</button></a>
      <% } else {%>
          <a href='/join'><button>Join Now</button></a>
          <% } %>
    <% } else { %>
      <h1> No user logged in</h1>
      <% } %>
    
    <% if(messages) { %>
      <ul>
        <% messages.forEach((message) =>{ %>
          <li>
            <%= message.message %>
            <%= message.createdAt %>
            <%= message.authorID.username %>
          </li>
       <% }) %>
      </ul>
    <% } %>
    
  </body>
</html>
